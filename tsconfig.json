{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": ["dom", "es2016"],
    "moduleResolution": "node",
    "baseUrl": "./",
    "sourceMap": true,
    "strict": true,
    "declaration": false,
    "noUnusedLocals": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
