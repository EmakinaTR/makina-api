{
  "extends": [
    "standard",
    "plugin:jest/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint",
    "jest",
    "graphql"
  ],
  "env": {
      "jest/globals": true
  },
  "rules": {
    "@typescript-eslint/indent": ["error", 2]
  }
}
